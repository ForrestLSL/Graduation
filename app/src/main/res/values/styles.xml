<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 自定义的ProgressBar-->
    <style name="myProgressBarStyleLarge">
        　　
        <item name="android:indeterminateDrawable">@drawable/progress_large_white</item>
    </style>
    <!-- 自定义loading dialog -->
    <style name="loading_dialog_tran" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!--频道Item的格式-->
    <style name="tv_item">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle"> bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="item_image">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">@dimen/dp3</item>
    </style>
    <!-- 右进左出的Style-->
    <style name="RiLo_CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/activity_act</item>
    </style>
    <style name="activity_act" parent="@android:style/Animation.Activity">
        <item name="@android:activityOpenEnterAnimation">@anim/go_in</item>

        <item name="@android:activityOpenExitAnimation">@anim/go_in_alpha</item>

        <item name="@android:activityCloseEnterAnimation">@anim/left_go_in</item>

        <item name="@android:activityCloseExitAnimation">@anim/right_go_out</item>
    </style>

</resources>
